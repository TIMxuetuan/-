/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin-right: 20rpx;
  border-radius: 50%;
}

.contentHead-text {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.userinfo-nickname {
  font-size: 34rpx;
  font-weight: 500;
  color: #343434;
  margin-bottom: 20rpx;
}

.userinfo-fubiao {
  font-size: 24rpx;
  font-weight: 500;
  color: #C2BEBF;
}

.userinfo-content {
  width: 100%;
  margin-top: 50rpx;
  padding: 0 40rpx;
  box-sizing: border-box;
}

.contentHead {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.contentHead-left {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.contentHead-compile .van-button {
  width: 140rpx;
  height: 62rpx;
  background-color: #fff;
  padding: 0;
  font-size: 24rpx;
  font-weight: 500;
  color: #FF561A;
  line-height: 62rpx;
  border: 1px solid #F6F6F8;
}

/*未登录 按钮样式*/
.noLogin button::after {
  border: none;
}

/*累计做题*/
.addUpExercise {
  margin-top: 56rpx;
  width: 670rpx;
  height: 128rpx;
  background: #FFFFFF;
  box-shadow: 1rpx 3rpx 35rpx 0px rgba(128, 128, 128, 0.13);
  border-radius: 8rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.addUpExercise-text {
  font-size: 24rpx;
  font-weight: 500;
  color: #9A9A9A;
}

.exercise-num {
  font-size: 40rpx;
  font-weight: bold;
  color: #FF561A;
}

.addUpExercise-wire {
  width: 2rpx;
  height: 90rpx;
  background: #DFDFDF;
}

/*三个模块*/
.threeModul {
  margin-top: 60rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.threeModul-item {
  width: 200rpx;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.threeModul-image {
  width: 72rpx;
  height: 72rpx;
}

.threeModul-title {
  font-size: 26rpx;
  font-weight: 500;
  color: #343434;
  line-height: 62rpx;
}

.threebg-one {
  background: #E7F5FE;
}

.threebg-two {
  background: #FFF5EC;
}

.threebg-three {
  background: #F4F7FF;
}

.noLoginBtn {
  width: 150rpx;
  height: 68rpx;
  background: #FF5519;
  border-radius: 5rpx;
  padding: 0;
  color: #ffffff;
  font-size: 28rpx;
  line-height: 68rpx;
}