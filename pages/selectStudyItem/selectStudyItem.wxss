/* pages/selectStudyItem/selectStudyItem.wxss */
.selectStudy {
  padding: 0 30rpx;
}

.selectStudy-title {
  font-size: 36rpx;
  font-weight: 500;
  color: #262626;
  margin-bottom: 32rpx;
}

.selectStudy-futitle {
  font-size: 24rpx;
  font-weight: 500;
  color: #666666;
  margin-bottom: 25rpx;
}

/*学习列表*/
.studyItem {
  padding: 0 12rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.studyItem-list {
  width: 294rpx;
  height: 176rpx;
  border-radius: 6rpx;
  margin-bottom: 44rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 22rpx 0;
  border: 2rpx solid #D9D9D9;
}

.listImage-vessel{
  width: 80rpx;
  height: 80rpx;
}

.listImage{
  width: 80rpx;
  height: 80rpx;
  display: block;
}

.listName{
font-size: 24rpx;
font-weight: 500;
color: #252525;
margin-top: 28rpx;
}

.pitchOn{
  background: #DBE9FF;
}
.pitchOff{
  background: #FFFFFF;
}


/* 暗黑模式下应用的样式 */
@media (prefers-color-scheme: dark) {
  .selectStudy-title{
    color: #E8E9EA;
  }
  .selectStudy-futitle{
    color: #A1A1A1;
  }
  .pitchOn{
    background: #374A60;
    color: #E8E9EA;
  }
  .pitchOff{
    background: #1A2736;
  }
  .listName{
    color: #A1A1A1;
  }
}